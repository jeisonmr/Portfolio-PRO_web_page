---
interface props {
  description: string;
  subdescription: string;
}
const { description, subdescription } = Astro.props;
---

<main class="card__description">
  <h3>{description}</h3>
  <h3>{subdescription}</h3>
</main>

<style>
  .card__description{
    width: 100%;
    height: auto;
    padding: 30px 30px !important;
    display: flex;
    flex-direction: column;
    transition: .1s;
    gap: 20px;
  }
  .card__description:hover{
    border-radius: 8px;
    background: #ffffff17;
    -webkit-backdrop-filter: blur(5px);
    backdrop-filter: blur(5px);
    transition: .05s;
  }
  .card__description > h3 {
    font-family: var(--font-4);
    font-weight: 200 !important;
    color: var(--cl-1);
    line-height: 1.2em;
    text-align: justify;
  }
</style>
