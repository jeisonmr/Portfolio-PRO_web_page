---
import "../../Styles/root.css";
import './about.css'
import DataAbout from "../json/About";
import SocialContact from "../res/socialContact.astro";
import Experience from "./components/Experience.astro";
import Education from "./components/Education.astro";

const [about, experience, education] = DataAbout.titles;
const [c1, c2, c3, c4, c5, c6] = DataAbout.experience;
const {description, subdescription} = DataAbout.about;
const [e1, e2] = DataAbout.education;
---



<section id="about" class="aboutContainer">


  <!-- <div class="component">{DataAbout.componente}</div> -->
  <div class="contentContainer">
    <div class="dataContainer">
     
      <p class="titleAbout">{about}</p>
      <p class="titleAbout">{experience}</p>
      <p class="titleAbout">{education}</p>
    </div>

    <!-- --------------------------------------------------------------------- -->
    
    <div class="dataContainer" id="about">

      <div class="aboutSection">
          <h3>{description}</h3>
          <h3>{subdescription}</h3>
      </div>
      
      <div class="experienceSection" id="experience">
          <Experience company={c1.company} responsabilities={c1.responsabilities} stack={c1.stack} time={c1.time}/>
          <Experience company={c2.company} responsabilities={c2.responsabilities} stack={c2.stack} time={c2.time}/>
          <Experience company={c3.company} responsabilities={c3.responsabilities} stack={c3.stack} time={c3.time}/>
          <Experience company={c4.company} responsabilities={c4.responsabilities} stack={c4.stack} time={c4.time}/>
          <Experience company={c5.company} responsabilities={c5.responsabilities} stack={c5.stack} time={c5.time}/>
          <Experience company={c6.company} responsabilities={c6.responsabilities} stack={c6.stack} time={c6.time}/>
      </div>

      <div class="educationSection" id="education">
        <Education studio={e1.studio} institution={e1.institution} years={e1.years} />
        <Education studio={e2.studio} institution={e2.institution} years={e2.years} />
      </div>

    </div>
  </div>
</section>

