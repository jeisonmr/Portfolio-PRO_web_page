---
interface props {
  img: string;
  url: string;
  title: string;
  stack: string;
}
const { img, title, stack, url } = Astro.props;
---

<div class="card">
  <img class="front" src={img} alt={title} />
  <div class="info">
    <h4>{title}</h4>
    <div>
      <ul>
        {
          stack.map((stackItems) => {
            return <li>{stackItems}</li>;
          })
        }
      </ul>
    </div>
    <button><a href={url}>View Online</a></button>
  </div>
</div>

<style>
  .card {
    width: 400px;
    height: 400px;
    border-radius: 5px;
    /* padding: 1.5rem; */
    background: #181818;
    position: relative;
    display: flex;
    align-items: flex-end;
    transition: 0.4s ease-out;
    box-shadow: 0px 7px 10px #00000080;
  }
  .card:hover {
    transform: translateY(20px);
  }
  .card:hover:before {
    opacity: 1;
  }
  .card:hover .info {
    opacity: 1;
    transform: translateY(0px);
  }
  .card:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 15px;
    background: rgba(0, 0, 0, 0.6);
    z-index: 2;
    transition: 0.5s;
    opacity: 0;
  }
  .card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 15px;
  }
  .info {
    position: absolute;
    width: 100%;
    height: auto;
    z-index: 3;
    color: white;
    opacity: 0;
    transform: translateY(30px);
    transition: 0.5s;
    padding: 20px 30px !important;
    border-radius: 10px;
  }
  .card .info h4 {
    font-size: 30px;
    font-family: var(--font-2);
    letter-spacing: 1.5px;
    margin-bottom: 10px !important;
  }
  .card .info ul li {
    letter-spacing: 1px;
    font-size: 15px;
    margin-top: 8px;

    font-family: var(--font-5);
    font-weight: 200 !important;
    font-size: 12px;
    border-radius: 30px;
    background-color:  var(--bg-8);
    padding: 5px 8px !important;
  }
  .card .info ul {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px !important;
  }
  .card .info button {
    padding: 10px !important;
    outline: none;
    border: none;
    border-radius: 30px;
    background-color:  var(--bg-8);
    color: var(--cl-1) !important;
    font-weight: bold;
    cursor: pointer;
    transition: 0.4s ease;
  }
  .card .info button:hover {
    background-color:  var(--bg-9);
    outline: none;
    border: none;
  }
  .card .info button a {
    color: var(--cl-1) !important;
  } 
  .card .info button a:hover {
    color: var(--cl-1) !important;
  }
</style>
