---
import "../../Styles/root.css";
import DataSocial from "../Json/Social";
---

<div class="socialGroup">
  {
    DataSocial.social.map((i) => {
      return (
        <div class=`socialGroup__containerIcon icon${i.key}`>
          <a href={i.url}>
            <img class="icon" src={i.img} alt="social" />
          </a>
        </div>
      );
    })
  }
</div>

<style>
      .socialGroup{
            width: 100%;
            height: 100%;
            /* background-color: red; */
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
      }
      .socialGroup__containerIcon{
            width: 200px;
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--bg-7);
            position: absolute;
            padding-left: 100px;
      }
      .icon{
            width: 50px;
            height: 50px;
      }
      .icon1{
            top: 400px;
            left: 450px;
      }
      .icon2{
            top: 300px;
            left: 230px;
      }
      .icon3{
            top: 620px;
            left: 450px;
      }
      .icon4{
            top: 520px;
            left: 230px;
      }
</style>
