---
import Logo from "../Components/res/logo.astro";
import Menu from "../Components/res/menu.astro";
import BtnLeng from "../Components/res/es-en.astro";
import "../Styles/root.css";

interface Props {
  btnTitle: string;
}
const { btnTitle } = Astro.props;
---

<nav class="navBar navBarMovil">
  <div class="logoContianer">
    <Logo />
  </div>
  <div class="menuContainer">
    <Menu btnTitle={btnTitle} />
  </div>
</nav>

<style>
  .navBar {
    width: 100%;
    height: 60px;
    display: flex;
    /* justify-content: space-between; */
    padding: 10px 30px !important;
    /* background-color: var(--bg-2); */
    position: relative !important;
    z-index: 200;
    animation: header 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
    animation-delay: .5s;
  }
  .logoContianer {
    width: 10%;
    height: 40px;
    animation-name: logo;
    animation: logo 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
    animation-delay: .8s;
  }
  .menuContainer {
    width: 90%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }
  .menuDesktop {
    /* display: none; */
  }
  /* @keyframes logo {
  0% {transform: translateX(-100px);}
  100% {transform: translateX(2px);}
} */
/* @keyframes header {
  0% {transform: translateY(-100px);}
  100% {transform: translateY(0px);} */
/* ================================================================= */

  @media screen and (max-width: 768px) {
    .logoContianer{
      width: 20% !important;
    }
    .menuContainer {
      justify-content: center;
      width: 80%;
    }
  }
  @media screen and (max-width: 425px) {
    .navBar {
      position: sticky !important;
    }
    .logoContianer{
      width: 40% !important;
    }
    .menuContainer {
      justify-content: end;
      width: 60%;
    }
  }
</style>
