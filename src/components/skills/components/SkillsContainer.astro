import SkillsCard from "./SkillsCard.astro";
import DataSkills from '../../json/Skills';
---

<section class="skills__card-container">
    {lista.map(techItems =>{
        return <SkillsCard img={techItems.img} tech={techItems.techName} />})}
<!-- 
        {
            <SkillsCard img={img} tech={techName} />
        } -->

</section>

<style>
    .skills__card-container{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: space-around;
        transition: .1s;
        width: 100%;
        height: auto;
        padding: 30px 30px !important;
        margin-bottom: 150px !important;
    }
    .skills__card-container:hover {
    border-radius: 8px;
    background: #ffffff17;
    -webkit-backdrop-filter: blur(5px);
    backdrop-filter: blur(5px);
    transition: 0.05s;
  }
</style>