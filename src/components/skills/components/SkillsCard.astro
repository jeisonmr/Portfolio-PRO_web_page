---
interface props {
  img: string;
  tech: string;
}
const { img, tech } = Astro.props;
---

<div class="skills__card">
  <img src={"img"} alt="d" />
  <span>{tech}</span>
</div>

<style>
  .skills__card {
    width: 100px;
    height: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border-radius: 10px !important; 
    font-family: var(--font-5);
    font-weight: 200 !important;
    font-size: 0.8vw;
    border-radius: 30px;
    background-color: var(--bg-8);
    /* padding: 5px 5px !important; */
  }
</style>
