---
import "../Styles/root.css";
import Social from "../Components/res/social.astro";
import Logo from "../../public/Resource/img/logos/jml.webp";
---

<footer class="footerContainer">
  <div class="logoSection">
    <a href="#home"><img src={Logo} alt="Logo" /></a>
  </div>
  <div class="socialSection">
    <div>
      <Social />
    </div>
  </div>
</footer>

<style>
  .footerContainer {
    width: 100%;
    height: 130px;
    background-color: var(--bg-1);
    display: flex;
    flex-direction: row;
  }
  .logoSection {
    width: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .logoSection > a > img {
    width: 50px;
  }
  .socialSection {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  @media screen and (max-width: 834px){
    .footerContainer {
    height: 15rem;
  }
  .logoSection > a > img {
    width: 7rem;
    margin-left: 10rem !important;
  }
  }
  @media screen and (max-width: 576px){
    .footerContainer {
    height: 25rem;
    display: flex;
    flex-direction: column-reverse;
  }
  .socialSection{
    height: 50%;
  }
  .logoSection{
    width: 100%;
    height: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .logoSection > a > img {
    width: 7rem;
    margin: 0rem !important;
  }
  }
</style>
