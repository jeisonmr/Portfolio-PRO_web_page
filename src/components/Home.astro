---
import DataHome from "./Json/Home";
---

<section class="homeContainer">
  <div class="movieContainer">
    <video src="/public/vBannerDesktop.webm" autoplay muted class="backMovie"
    ></video>
  </div>
  <div class="dataContainer">

    <div class="dataSocial ">
      <div class="social_1">
      <p class="title">{DataHome.title}</p>
      <p class="subtitle">{DataHome.subtitle}</p>
      {
        DataHome.description.map((i) => {
          return <p class="description">{i}</p>;
        })
      }
      </div>
      <div class="social_2">
        {
          DataHome.social.map((i) => {
            return <img src={i} class="icon" alt="social" />;
          })
        }
      </div>
      
    </div>

    <div class="divHome"></div>

  </div>
</section>

<script></script>

<style>
  .homeContainer {
    width: 100%;
    height: 100%;
    position: relative;
  }
  .movieContainer {
    width: 100%;
    height: 100%;
    position: relative;
  }
  .dataContainer {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    position: absolute;
    top: 0;
  }
  .dataSocial{
    width: 50%;
    display: flex;
    flex-direction: column;
  }
  .divHome {
    width: 50%;
  }
  .backMovie {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    z-index: 50;
  }
  .title {
    font-family: var(--font-1);
    font-weight: 400;
    font-size: 80px;
    line-height: 120px;
    color: var(--cl-1);
  }
  .subtitle {
    font-family: var(--font-2);
    font-weight: bold;
    font-size: 180px;
    line-height: 216px;
    color: var(--cl-1);
  }
  .description {
    font-family: var(--font-3);
    font-style: normal;
    font-weight: 400;
    font-size: 55px;
    line-height: 53px;
    color: var(--cl-1);
  }
  .dataSocial{
    display: flex;
    flex-direction: column;
  }
  .social_1{
    width: 100%;
    height: 80%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 0 0 10rem !important;
  }
  .social_1 p:nth-child(1){
    margin-bottom: -20px !important;
  }
  .social_1 p:nth-child(2){
    margin-bottom: -50px !important;
  }
  .social_2{
    width: 100%;
    height: 20%;
    padding: 3rem 0 0 10rem !important;

  }
  .icon {
    width: 2rem;
    color: var(--cl-1);
  }
</style>
